<h1>Listing orders</h1>

<table>
  <thead>
    <tr>
      <th>Numeropedido</th>
      <th>Fechapedido</th>
      <th>Fechaprogramada</th>
      <th>Fechaentregada</th>
      <th>Estatus</th>
      <th>User</th>
      <th>Client</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.numeropedido %></td>
        <td><%= order.fechapedido %></td>
        <td><%= order.fechaprogramada %></td>
        <td><%= order.fechaentregada %></td>
        <td><%= order.estatus %></td>
        <td><%= order.user_id %></td>
        <td><%= order.client_id %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

