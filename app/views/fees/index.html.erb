<%- model_class = Fee -%>
<div class="page-header">
  <h1>Metas<%#=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>

      <th><%= model_class.human_attribute_name(:Usuario) %></th>
      <th><%= model_class.human_attribute_name(:"Meta") %></th>
      <th><%= model_class.human_attribute_name(:"Fecha inicio") %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @fees.each do |fee| %>
      <tr>
        <td><%= fee.user_id %></td>
        <td><%= fee.cantidadDinero %></td>
        <td><%= fee.tiempo %></td>
        <td>
          <%= link_to t('.show', :default => t("Detalles")),
                      fee_path(fee), :class => 'btn btn-mini btn-info' %>
          <%= link_to t('.edit', :default => t("Editar")),
                      edit_fee_path(fee), :class => 'btn btn-mini' %>

          <%= link_to t('.destroy', :default => t("Eliminar")),
                      fee_path(fee),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("Â¿EstÃ¡ seguro de eliminar este registro?", :default => 'Â¿EstÃ¡ seguro de eliminar este registro?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("Definir Meta")),
            new_fee_path,
            :class => 'btn btn-primary' %>
