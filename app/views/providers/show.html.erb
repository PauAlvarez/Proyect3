<%- model_class = Provider -%>
<div class="page-header">
  <h1><%#=t '.title', :default => model_class.model_name.human.titleize %>Detalles</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:"Nombre empresa") %>:</strong></dt>
  <dd><%= @provider.nombreEmpresa %></dd>
  <dt><strong><%= model_class.human_attribute_name(:"Teléfono") %>:</strong></dt>
  <dd><%= @provider.telefonoEmpresa %></dd>
  <dt><strong><%= model_class.human_attribute_name(:"Dirección") %>:</strong></dt>
  <dd><%= @provider.direccionEmpresa %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Contacto) %>:</strong></dt>
  <dd><%= @provider.nombreContacto %></dd>
  <dt><strong><%= model_class.human_attribute_name(:"Correo electrónico") %>:</strong></dt>
  <dd><%= @provider.correoElectronico %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("Ver registros")),
              providers_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("Editar")),
              edit_provider_path(@provider), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("Eliminar")),
              provider_path(@provider),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("¿Está seguro de eliminar este registro?", :default => '¿Está seguro de eliminar este registro?')) },
              :class => 'btn btn-danger' %>
</div>
