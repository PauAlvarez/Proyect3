<%- model_class = Provider -%>
<div class="page-header">
  <h1><%#=t '.title', :default => model_class.model_name.human.pluralize.titleize %>Proveedores</h1>
</div>

<table id="providers" class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:"Nombre de la empresa") %></th>
      <th><%= model_class.human_attribute_name(:Contacto) %></th>
      <th><%= model_class.human_attribute_name(:"Correo electrónico") %></th>
      <th><%=t '.actions', :default => t("Acciones") %></th>
    </tr>
  </thead>
  <tbody>
    <% @providers.each do |provider| %>
      <tr>
        <td><%= link_to provider.nombreEmpresa, provider_path(provider) %></td>
        <td><%= provider.nombreContacto %></td>
        <td><%= provider.correoElectronico %></td>

        <td>
          <%= link_to t('.show', :default => t("Detalles")),
                      provider_path(provider), :class => 'btn btn-mini btn-info' %>
          <%= link_to t('.edit', :default => t("Editar")),
                      edit_provider_path(provider), :class => 'btn btn-mini' %>

          <%= link_to t('.destroy', :default => t("Eliminar")),
                      provider_path(provider),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("¿Está seguro de eliminar este registro?", :default => '¿Está seguro de eliminar este registro?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("Crear Proveedor")),
            new_provider_path,
            :class => 'btn btn-primary' %>
