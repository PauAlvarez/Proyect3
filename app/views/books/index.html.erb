<%- model_class = Book -%>
<div class="page-header">
  <h1>Libros<%#=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table id="books" class="table table-striped">
  <thead>
    <tr>
      
      <th><%= model_class.human_attribute_name(:"Título") %></th>
      <th><%= model_class.human_attribute_name(:Autor) %></th>
      <th><%= model_class.human_attribute_name(:"Disponibles") %></th>
      <th><%= model_class.human_attribute_name(:Precio) %></th>
      <th><%=t '.actions', :default => t("Acciones") %></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.titulo %></td>
        <td><%= book.autor %></td>
        <td><%= book.cantidad %></td>
        <td><%= book.precio %></td>
        <td>
          <%= link_to t('.show', :default => t("Detalles")),
                      book_path(book), :class => 'btn btn-mini btn-info' %>
          <%= link_to t('.edit', :default => t("Editar")),
                      edit_book_path(book), :class => 'btn btn-mini' %>

          <%= link_to t('.destroy', :default => t("Eliminar")),
                      book_path(book),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("¿Está seguro de eliminar este registro?", :default => '¿Está seguro de eliminar este registro?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("Agregar Libro")),
            new_book_path,
            :class => 'btn btn-primary' %>
