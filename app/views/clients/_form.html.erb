<%= form_for @client, :html => { :class => 'form-horizontal' } do |f| %>

  <div class="control-group<%= @client.errors[:nombreClient].any? ? " error" : "" %>">
    <%= f.label :Nombre, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nombreClient, :class => 'text_field' %>
            <span class="help-inline">
      <%= @client.errors[:nombreClient].any? ? @client.errors[:nombreClient].to_s[/\w([^"]*)/] : "" %></span>
    </div>
  </div>


  <div class="control-group">
    <%= f.label :"Dirección", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :direccioncliente, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group<%= @client.errors[:telefonoClient].any? ? " error" : "" %>">
    <%= f.label :"Teléfono", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :telefonoClient, :class => 'text_field' %>
      <span class="help-inline">
      <%= @client.errors[:telefonoClient].any? ? @client.errors[:telefonoClient].to_s[/\w([^"]*)/] : "" %></span>
    </div>
  </div>


  <div class="control-group<%= @client.errors[:email].any? ? " error" : "" %>">
    <%= f.label :Email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field' %>
            <span class="help-inline">
      <%= @client.errors[:email].any? ? @client.errors[:email].to_s[/\w([^"]*)/] : "" %></span>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :Facebook, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :facebook, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :LinkenId, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :linkenId, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :Twitter, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :twitter, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
     
   
<%= f.submit "Guardar", :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("Cancelar")),
                clients_path, :class => 'btn' %>
  </div>
<% end %>
