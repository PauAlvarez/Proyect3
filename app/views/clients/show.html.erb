<%- model_class = Client -%>
<div class="page-header">
  <h1><%#=t '.title', :default => model_class.model_name.human.titleize %>Detalles</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:Nombre) %>:</strong></dt>
  <dd><%= @client.nombreClient %></dd>
  <dt><strong><%= model_class.human_attribute_name(:"Dirección") %>:</strong></dt>
  <dd><%= @client.direccioncliente %></dd>
  <dt><strong><%= model_class.human_attribute_name(:"Teléfono") %>:</strong></dt>
  <dd><%= @client.telefonoClient %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Email) %>:</strong></dt>
  <dd><%= @client.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Facebook) %>:</strong></dt>
  <dd><%= @client.facebook %></dd>
  <dt><strong><%= model_class.human_attribute_name(:LinkenId) %>:</strong></dt>
  <dd><%= @client.linkenId %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Twitter) %>:</strong></dt>
  <dd><%= @client.twitter %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("Ver registros")),
              clients_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("Editar")),
              edit_client_path(@client), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("Eliminar")),
              client_path(@client),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("¿Está seguro de eliminar este registro?", :default => '¿Está seguro de eliminar este registro?')) },
              :class => 'btn btn-danger' %>
</div>
